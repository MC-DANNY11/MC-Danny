                                    <Label Text="New"
                                           FontFamily="Lemon"
                                           TextColor="{StaticResource Primario}"
                                           FontSize="10" />
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
                <StackLayout Orientation="Vertical"
                             Padding="15,0,15,5">
                    <Label Text="Todos los Productos"
                           TextColor="{StaticResource Primario}"
                           FontFamily="Lemon" />
                    <ScrollView Orientation="Vertical">
                        <StackLayout Orientation="Vertical"
                                     Spacing="10">
                            <!-- Primera fila de productos -->
                            <StackLayout Orientation="Horizontal">
                                <Frame HeightRequest="100"
                                       WidthRequest="170"
                                       Padding="5"
                                       HorizontalOptions="StartAndExpand">
                                    <StackLayout Orientation="Horizontal">
                                        <ImageButton Source="https://i.ibb.co/pnC1DYf/saltador.png"
                                                     HorizontalOptions="Center" />
                                        <Label Text="New"
                                               FontFamily="Lemon"
                                               TextColor="{StaticResource Primario}"
                                               FontSize="10" />
                                    </StackLayout>
                                </Frame>
                                <Frame HeightRequest="100"
                                       WidthRequest="170"
                                       Padding="5"
                                       HorizontalOptions="EndAndExpand">
                                    <StackLayout Orientation="Horizontal">
                                        <ImageButton Source="https://i.ibb.co/pnC1DYf/saltador.png"
                                                     HorizontalOptions="Center" />
                                        <Label Text="New"
                                               FontFamily="Lemon"
                                               TextColor="{StaticResource Primario}"
                                               FontSize="10" />
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                            <!-- Segunda fila de productos -->
                            <StackLayout Orientation="Horizontal">
                                <Frame HeightRequest="100"
                                       WidthRequest="170"
                                       Padding="5"
                                       HorizontalOptions="StartAndExpand">
                                    <StackLayout Orientation="Horizontal">
                                        <ImageButton Source="https://i.ibb.co/pnC1DYf/saltador.png"
                                                     HorizontalOptions="Center" />
                                        <Label Text="New"
                                               FontFamily="Lemon"
