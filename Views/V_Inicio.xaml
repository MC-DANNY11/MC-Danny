                                           FontSize="10" />
                                </StackLayout>
                            </Frame>
                            <Frame HeightRequest="85"
                                   WidthRequest="120"
                                   Padding="5">
                                <StackLayout Orientation="Horizontal">
                                    <ImageButton Source="https://i.ibb.co/pfZpkrr/pantalones-cortos.png"
                                                 HorizontalOptions="Center" />
                                    <Label Text="New"
                                           FontFamily="Lemon"
                                           TextColor="{StaticResource Primario}"
                                           FontSize="10" />
                                </StackLayout>
                            </Frame>
                            <Frame HeightRequest="85"
                                   WidthRequest="120"
                                   Padding="5">
